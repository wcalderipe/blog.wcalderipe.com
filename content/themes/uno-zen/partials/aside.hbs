<aside class="cover collapsed">

  <div class="cover container collapsed">
    <div class="profile">
      {{#if @blog.logo}}
      <a id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="profile avatar hvr-buzz-out" />
        <h1>William Calderipe</h1>
      </a>
      {{/if}}

      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <div id="links-wrapper" class="navigation">
        {{> search }}
        <div class="profile contact">
          {{> links}}
          {{> social}}
        </div>
      </div>
    </div>
  </div>
</aside>
